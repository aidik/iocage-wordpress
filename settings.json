{
        "servicerestart":"service nginx restart",
        "serviceget": "/usr/local/bin/wpget",
        "serviceset": "/usr/local/bin/wpset",
        "options": {
                "admin": {
                        "type": "string",
                        "name": "WP Superadmin username",
                        "description": "This will be your login to WP Administration.",
                        "default": "wpadmin",
                        "requirerestart": false
                },
                "wpurl": {
                        "type": "string",
                        "name": "Wordpress URL",
                        "description": "Here will your WP live.",
                        "default": true,
                        "requirerestart": true

                }
        }
}